generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id              String        @id @default(uuid())
  email           String        @unique
  name            String?
  pro             String?       
  ipiNumber       String?       
  
  // NEW: Spotify Metadata
  spotifyArtistId String?       @unique // The "URI" from Spotify
  avatarUrl       String?       // Their public profile pic
  
  clerkId         String?       
  stripeConnectId String?       
  accounts        Account[]     
  writerSplits    WriterSplit[] 
  masterSplits    MasterSplit[] 
  createdAt       DateTime      @default(now())
}

model Account {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  type      String   // "personal", "manager", "label"
  createdAt DateTime @default(now())
}

model Song {
  id            String        @id @default(uuid())
  title         String
  iswc          String?       @unique
  isLocked      Boolean       @default(false)
  
  // NEW: Track where this data came from
  importSource  String?       // e.g. "spotify", "csv", "manual"
  
  writers       WriterSplit[]
  releases      Release[]
  splitSheets   SplitSheet[]
  placements    Placement[]   // Ensure this exists from previous steps
  
  createdAt     DateTime      @default(now())
  cwrFileGeneratedAt DateTime?
}

model Release {
  id           String        @id @default(uuid())
  songId       String
  song         Song          @relation(fields: [songId], references: [id], onDelete: Cascade)
  upc          String?       @unique
  isrc         String?       @unique
  title        String
  
  coverArtUrl  String?       // NEW FIELD
  
  masterOwners MasterSplit[]
  createdAt    DateTime      @default(now())
}

model WriterSplit {
  id         String   @id @default(uuid())
  songId     String
  song       Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
  userId     String?
  user       User?    @relation(fields: [userId], references: [id])
  email      String?
  percentage Decimal  @db.Decimal(5, 2)
  role       String
  
  // ADD THIS LINE:
  createdAt  DateTime @default(now()) 
}

model MasterSplit {
  id         String  @id @default(uuid())
  releaseId  String
  release    Release @relation(fields: [releaseId], references: [id])
  userId     String?
  user       User?   @relation(fields: [userId], references: [id])
  percentage Decimal @db.Decimal(5, 2)
  role       String  // "Producer", "Label"
}

model SplitSheet {
  id             String   @id @default(uuid())
  
  // This is the "Opposite Relation" the error is asking for:
  songId         String
  song           Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
  
  pdfUrl         String
  signedByUserId String
  signedAt       DateTime @default(now())
  signedIp       String?
  userAgent      String?
  version        Int      @default(1)
}


// Add this new model to your schema
model AuditLog {
  id        String   @id @default(uuid())
  userId    String?  // The user who initiated the change
  action    String   // e.g., "SPLIT_UPDATED", "CONTRACT_SIGNED", "SONG_DELETED"
  entity    String   // e.g., "WriterSplit", "Song", "Release"
  entityId  String   // The ID of the affected record
  oldData   Json?    // Optional: stores the state before the change
  newData   Json?    // Optional: stores the state after the change
  ipAddress String?  // IP address of the requester (CRITICAL for legal evidence)
  createdAt DateTime @default(now())
}


model Placement {
  id          String   @id @default(uuid())
  songId      String
  song        Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
  
  client      String
  project     String?
  licenseType String
  
  // 1. The Upfront Money
  fee         Decimal  @db.Decimal(10, 2)
  currency    String   @default("USD")
  feeStatus   String   @default("pending") // "pending", "invoiced", "paid"
  
  // 2. The Backend (BMI/ASCAP)
  proStatus   String   @default("todo")    // "todo", "submitted", "confirmed"
  
  notes       String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}